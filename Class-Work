//reversed a word.
#include<bits/stdc++.h>
using namespace std;
int main(){
    string s,t="";
    cin>>s;
    int n=s.size();
    for(int i=n-1;i>=0;i--){
        t= t+s[i];
    }
    cout<<t<<"\n";

}

#include<bits/stdc++.h>
using namespace std;
int main(){
    string s;
    cin>>s;
    int n=s.size();
    for(int i=n-1;i>=0;i--){
       cout<<s[i];
    }
    cout<<"\n";
}

//Given a string S, consisting of ascii characters. print "Yes" if the string contains only digit, "No" otherwise.
#include<bits/stdc++.h>
using namespace std;
int main(){
    string s;
    cin>>s;

    bool ys = true;
    for(int i=0; i<s.size();i++){
        if(s[i]>=48 && s[i]<=57){

        }
        else{
            ys = false;
        }
    }
    if(ys){
        cout<<"Yes\n";
    }
    else{
        cout<<"No\n";
    }
}

//Given a sorted array arr, remove the duplicates from arr such that each element appears only and display the new array.
#include<bits/stdc++.h>
using namespace std;
int main(){
    int tc;
    cin>>tc;
    for(int tt=0; tt<tc; tt++){

     int n;
     cin>>n;
     int i, arr[n+2],b[n+2],starting_index=0;
     starting_index++;

     for(i=0; i<n; i++){
        cin>>arr[i];
     }
     b[starting_index] = arr[0];
     starting_index++;
     for(i=1; i<n; i++){
        if(arr[i]==arr[i-1]){
            //nothing to do
        }
        else{
            b[starting_index]=arr[i];
            starting_index++;
        }
     }
     for(i=0; i<starting_index; i++){
        cout<<b[i]<<" ";
     }
     cout<<"\n";
    }
}

/*You are given an arry of integers. A and a number of queries q. each query consists of
tow integers L and R. You have to print the sum of integer in range L to R. Note:- 1 indexed array.
*/
