/*Write a program to compare two numbers and print whether the first number is greater than,
less then, or equal to the second number using relational operators(<,>,==).
*/
#include<bits/stdc++.h>
using namespace std;
int main(){
  int a,b;
  cout<<"Enter the 1st number: ";
  cin>>a;
  cout<<"Enter the 2nd number: ";
  cin>>b;

  if(a>b){
    cout<<a<<" is greater than "<<b<<"\n";
  }
  else if(a<b){
    cout<<b<<" is greater than "<<a<<"\n";
  }
  else{
    cout<<"Both are equal.\n";
  }
}

/*write a program to find the largest number among 3 numbers.
*/
#include<bits/stdc++.h>
using namespace std;
int main(){
    int a,b,c;
    cout<<"Enter three numbers: ";
    cin>>a>>b>>c;
    if(a>b && a>c){
        cout<<"The largest number is: "<<a;
    }
    else if(b>a && b>c){
        cout<<"The largest number is: "<<b;
    }
    else if(c>a && c>b){
        cout<<"The largest number is: "<<c;
    }
    else {
        cout<<"";
    }
}

//While loop
#include<bits/stdc++.h>
using namespace std;
int main(){
    int a = 1;
 //for(initialization;condition;increment){
    // statement}
  /*  for(a=1;a<=100;a=a+1){
        cout<<a<<"\n";
    }*/
    while(a<=100){
        cout<<a<<"\n";
       a = a+1;
    }
}

//for loop for print a pattern.
#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    int i,j;
    for(i=1;i<=n;i++){
        for(j=1;j<=i;j++){
            cout<<"* ";
        }
        cout<<"\n";
    }
}

//for loop
#include<bits/stdc++.h>
using namespace std;
int main(){
int i,j,n;
cin>>n;
for (i=1; i<=n; i++){
    int star = 0, space = 0;
    star = i;
    space = n-i;

    for (j=1; j<=space; j++){
        cout<<" ";
    }
    for (j=1; j<=star; j++){
        cout<<"*";
    }
    cout<<"\n";
 }
}

//Array.
#include<bits/stdc++.h>
using namespace std;
int main(){
 int n,i,j,k;
 cin>>n;
 int roll[n+5], marks[n+5],age[n+5];
 //cin>>roll[i]>>age[i]>>marks[i];
    for(int i=0; i<n;i++){
        cin>>roll[i]>>age[i]>>marks[i];
    }
    for(i=0; i<n;i++){
       cout<<roll[i]<<" "<<(marks[i]+age[i])<<"\n";
    }
cout<<"\n";

}

#include<bits/stdc++.h>
using namespace std;
int main(){
    int n,mx=-1,k,i;
    cout<<"How many number: ";
    cin>>n;
    cout<<"Enter your number: ";

    for (i=0; i<n; i++){
        cin>>k;
        if(mx<k){
            mx = k;
        }
    }
    cout<<"The max value is: "<<mx<<"\n";

}
